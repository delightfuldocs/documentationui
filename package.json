{
  "name": "@delightfuldocs/documentationui",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "git@github.com:delightfuldocs/documentationui.git",
  "author": "David Turnbull <delightfuldocs@gmail.com>",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "build": "yarn js:build && yarn css:build",
    "css:build": "yarn postcss packages/**/*.css --base packages --dir lib",
    "css:watch": "yarn postcss packages/**/*.css --base packages --dir lib --watch",
    "format": "prettier --write --no-config --no-editorconfig",
    "format:check": "yarn format --check",
    "format:package": "format-package -w",
    "js:build": "yarn lerna exec \"rollup --config=../../rollup.config.js\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "storybook:build": "build-storybook",
    "storybook:watch": "start-storybook --port 6006 --no-manager-cache",
    "test": "jest --onlyChanged",
    "test:watch": "yarn test --watch"
  },
  "lint-staged": {
    "*.{js,css,md,tsx,tsx,html,json}": "yarn format",
    "*.{js,ts,tsx}": "yarn lint:fix",
    "package.json": "yarn format:package"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "clsx": "^1.1.1"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-measure": "^6.4.0-alpha.27",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-viewport": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "autoprefixer": "^10.3.4",
    "babel-jest": "^27.1.0",
    "babel-loader": "^8.2.2",
    "classnames": "^2.3.1",
    "commitizen": "^4.2.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "format-package": "^6.1.0",
    "husky": ">=6",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "prettier": "^2.3.2",
    "rollup": "^2.56.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-tailwindcss": "^1.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "storybook-addon-outline": "^1.4.1",
    "storybook-tailwind-dark-mode": "^1.0.11",
    "tailwindcss": "^2.2.9",
    "typescript": "^4.4.2"
  }
}
